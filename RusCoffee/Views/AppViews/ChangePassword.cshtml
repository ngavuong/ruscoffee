
@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2><b>Đổi mật khẩu</b></h2>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight" id="changePassword">
    <div class="row">
        <div id="changePass-form">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-sm-12">
                                <form role="form">
                                    <div class="form-group d-flex"><label style="width:150px">Mật khẩu cũ:</label> <input type="password" fieldName="OldPassword" class="form-control" style="border:none;border-bottom:1px dotted #c0c0c0" autocomplete="off"></div>
                                    <div class="form-group d-flex"><label style="width:150px">Mật khẩu mới:</label> <input type="password" fieldName="NewPassword" class="form-control" style="border:none;border-bottom:1px dotted #c0c0c0" autocomplete="off"></div>
                                    <div class="form-group d-flex"><label style="width:150px">Nhập lại mật khẩu:</label> <input type="password" fieldName="ReNewPassword" class="form-control" style="border:none;border-bottom:1px dotted #c0c0c0" autocomplete="off"></div>
                                    <div>
                                        <a class="btn btn-sm btn-danger float-right m-t-n-xs ml-1 closeBtn"><strong>Hủy bỏ</strong></a>
                                        <input id="saveChangePass" class="btn btn-sm btn-primary float-right m-t-n-xs ml-1 changePasswordBtn" style="width:74px" value="Lưu" />
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<script src="~/Scripts/libraries/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/common/common.js"></script>
<script src="~/Scripts/base/base.js"></script>
<script src="~/Scripts/base/ajax.js"></script>
<script type="text/javascript">
